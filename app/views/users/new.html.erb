<div class='h-full w-full flex flex-col gap-5 justify-center items-center'>
  <div class='prose'>
    <h2>Sign Up</h2>
    <p>Sign up now</p>
  </div>
  <%= form_with model: @user, class: 'w-1/4 form-control gap-5' do |form| %>
    <%= form.text_field :name, class: 'input input-primary', placeholder: 'name', require: true %>
    <%= form.text_field :username, class: 'input input-primary', placeholder: 'username', require: true %>
    <%= form.email_field :email_address, class: 'input input-primary', placeholder: 'email_address', required: true %>
    <%= form.password_field :password, class: 'input input-primary', placeholder: 'password', required: true %>
    <%= form.submit 'Sign Up', class: 'btn btn-primary' %>
  <% end %>
</div>
