<%= form_with(model: board, class: "form-control") do |form| %>
  <% if board.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(board.errors.count, "error") %> prohibited this board from being saved:</h2>

      <ul>
        <% board.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-3">
    <%= form.label :appname, class: "label" %>
    <%= form.text_field :appname, class: "block w-full input input-bordered" %>
  </div>

  <div class="my-3">
    <%= form.label :title, class: "label" %>
    <%= form.text_field :title, class: "block w-full input input-bordered" %>
  </div>

  <div class="my-3">
    <%= form.label :description, class: "label" %>
    <%= form.text_area :description, rows: 4, class: "w-full textarea textarea-bordered" %>
  </div>

  <div class="my-3">
    <%= form.label :website, class: "label" %>
    <%= form.text_field :website, class: "block w-full input input-bordered" %>
  </div>

  <div class="my-3">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
