<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Features" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Features</h1>
    <%= link_to "New feature", new_portal_board_feature_path, class: "btn btn-primary" %>
  </div>

  <div class='flex flex-col md:flex-row mx-auto w-full gap-12'>
    <div class=''>
      <%= render "portal/boards/form", board: @board%>
    </div>

    <div id="features" class="">
      <% @features.each do |feature| %>
        <%= render feature %>
      <% end %>
    </div>
  </div>

</div>
